Config { font            = "-*-terminus-medium-*-*-*-14-*-*-*-*-*-iso8859-1"
       , bgColor         = "#222222"
       , fgColor         = "#EEEEEE"
       , position        = Top
       , lowerOnStart    = True
       , persistent      = False
       , hideOnStart     = False
       , commands        = [ Run Date "<fc=#888888>[</fc>%a <fc=#1E90FF>%_d %b</fc> %H<fc=#888888>:</fc>%M<fc=#888888>]</fc>" "clock" 300
                           , Run Battery ["-t", "<fc=#888888>[</fc><fc=#1E90FF><acstatus></fc><left>%<fc=#888888>]</fc>",
                                          "-L", "10",
                                          "-l", "#AE4747",
                                          "--", 
                                          "-f", "ADP0/online",
                                          "-O", "Charg:", 
                                          "-i", "Charg:",
                                          "-o", "Batt:"] 50
                           , Run Volume "default" "Master" ["-t","<fc=#888888>[</fc><status><volume>%<fc=#888888>]</fc>",
                                                            "--",
                                                            "-O","Vol:",
                                                            "-o","Vol:",
                                                            "-C","#1E90FF",
                                                            "-c","#AE4747"
                                                           ] 10
                           , Run MPD ["-t","<fc=#888888>[</fc><fc=#1E90FF><statei></fc><fc=#888888>][</fc><lapsed>/<length><fc=#888888>][</fc><artist><fc=#888888> - </fc><title><fc=#888888>]</fc>",
                                      "--", "-P", ">>", "-Z", "||", "-S", "><"] 10
                           , Run StdinReader
                           ]
       , sepChar         = "%"
       , alignSep        = "}{"
, template        =  "<fc=#888888>[</fc>%StdinReader%<fc=#888888>]</fc>}%mpd%{%battery% %default:Master% %clock% "
       }
